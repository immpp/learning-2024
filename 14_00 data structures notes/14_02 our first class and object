class PartyAnimal:

	def __init__(self):
		self.x = 0

	##this is the method

	def party(self):
		self.x = self.x + 1
		print("So far",self.x)

an = PartyAnimal()

an.party()
an.party()
an.party()

____

## tell the an object to run the party()code within it

## clunkier but the same as an.party()

PartyAnimal.party(an)

